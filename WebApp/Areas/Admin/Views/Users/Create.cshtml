@model WebApp.Models.User
@{
    ViewBag.Title = "Создание пользователя";
}

<ol class="breadcrumb">
    <li><a asp-area="" asp-action="Index" asp-controller="Home">Главная</a></li>
    <li><a asp-area="Admin" asp-action="Index" asp-controller="Users">Пользователи</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<div class="container-fluid">
    <form asp-action="Create">
        <div class="panel panel-primary">
            <div class="panel-heading">@ViewBag.Title</div>
            <div class="panel-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">Имя</label>
                    <input type="text" asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" />
                </div>
                <div class="form-group">
                    <label asp-for="Patronymic" class="control-label">Отчество</label>
                    <input type="text" asp-for="Patronymic" class="form-control" />
                    <span asp-validation-for="Patronymic" />
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">Фамилия</label>
                    <input type="text" asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" />
                </div>
                <div class="form-group">
                    <label asp-for="About">Обо мне</label>
                    <textarea class="form-control" rows="5" asp-for="About" ></textarea>
                    <span asp-validation-for="About" />
                </div>
                <div class="form-group">
                    <label asp-for="Photo" class="control-label">Фото</label>
                    <input type="text" asp-for="Photo" class="form-control" />
                    <span asp-validation-for="Photo" />
                </div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label">Логин</label>
                    <input type="text" asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Пароль</label>
                    <input type="text" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group">
                    <label asp-for="RoleId" class="control-label">Роль</label>
                    <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="GroupId" class="control-label">Номер группы</label>
                    <select asp-for="GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Создать" class="btn btn-primary btn-block" />
        </div>
        <a asp-action="Index" asp-area="Admin" asp-controller="Users" class="btn btn-default btn-block" role="button">Назад</a>
    </form>
    <br />
</div>