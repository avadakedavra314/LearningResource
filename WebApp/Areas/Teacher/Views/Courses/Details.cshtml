@model WebApp.Models.Course
@{
    ViewBag.Title = "Подробная информация";
}

<ol class="breadcrumb">
    <li><a asp-area="" asp-action="Index" asp-controller="Home">Главная</a></li>
    <li><a asp-area="Teacher" asp-action="Index" asp-controller="Courses">Курсы</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<div class="container-fluid">
    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th scope="row">Название</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th scope="row">Описание</th>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <th scope="row">Создатель</th>
                    <td>
                        @Model.User.FirstName
                    @Model.User.LastName
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="form-group">
        <a asp-action="Edit" class="btn btn-primary btn-block" asp-route-id="@Model.Id">Изменить</a>
    </div>
    <a asp-area="Teacher" asp-action="Index" asp-controller="Courses" class="btn btn-default btn-block" role="button">Назад</a>
</div>